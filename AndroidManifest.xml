<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="fi.testbed2"
      android:versionCode="18"
      android:versionName="2.0.10">
    <application
        android:icon="@drawable/ic_launcher_drop"
        android:label="@string/app_name"
        android:name=".app.MainApplication">
        <activity android:name=".activity.MainActivity"
                  android:label="@string/app_name"
                  android:theme="@style/CustomLightTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity android:name=".activity.TestbedPreferenceActivity"
				  android:label="@string/activity_label_settings" >
		</activity>
        <activity android:name=".activity.ParsingActivity"
                  android:label="@string/activity_label_downloading"
                  android:configChanges="orientation"
                  android:theme="@style/CustomLightTheme">
        </activity>
        <activity android:name=".activity.AnimationActivity"
				  android:label="@string/activity_label_anim"
                  android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
                  android:configChanges="orientation">
		</activity>
    </application>
    <uses-sdk
    	android:minSdkVersion="4"
    	android:targetSdkVersion="8"
    />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest> 